<header class="header">
  <div class="header__left">
    <%= link_to "Upright", root_url(subdomain: Upright.configuration.admin_subdomain), class: "header__logo" %>
    <% if Upright::Current.site.present? %>
      <span class="header__site"><%= Upright::Current.site.city %></span>
    <% end %>
  </div>
  <nav class="header__nav">
    <%= link_to "Probes", upright.site_root_url(subdomain: current_or_default_site.code), class: "header__link" %>
    <%= link_to "Uptime", upright.dashboards_uptime_url(subdomain: Upright.configuration.admin_subdomain), class: "header__link" %>
    <span class="header__divider"></span>
    <%= link_to "Jobs", upright.tools_jobs_url(subdomain: current_or_default_site.code), class: "header__link" %>
    <span class="header__divider"></span>
    <%= link_to "Prometheus", upright.tools_prometheus_url(subdomain: Upright.configuration.admin_subdomain), class: "header__link" %>
    <%= link_to "Alertmanager", upright.tools_alertmanager_url(subdomain: Upright.configuration.admin_subdomain), class: "header__link" %>
  </nav>
  <div class="header__user">
    <span><%= Upright::Current.user.name %></span>
    <%= button_to "Sign out", upright.session_path, method: :delete, data: { turbo: false }, class: "btn" %>
  </div>
</header>
