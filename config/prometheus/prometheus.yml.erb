# Upright Prometheus Configuration
# Generated by Upright Engine

global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - /etc/prometheus/rules/*.yml

scrape_configs:
  - job_name: upright
    static_configs:
      - targets: ['localhost:9090']
    metrics_path: /metrics

# Enable OTLP receiver
# Start with: --web.enable-otlp-receiver
